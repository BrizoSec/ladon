# Detection Service Environment Variables

# Service Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Redis Configuration (IOC Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# Redis Cache Settings
IOC_CACHE_TTL=86400  # 24 hours in seconds

# Pub/Sub Configuration
PUBSUB_PROJECT_ID=ladon-dev
PUBSUB_ACTIVITY_EVENTS_SUBSCRIPTION=normalized-activity-events-sub
PUBSUB_DETECTIONS_TOPIC=detections

# Detection Configuration
DETECTION_BATCH_SIZE=1000
CORRELATION_TIMEOUT_MS=100

# Matching Configuration
ENABLE_SUBDOMAIN_MATCHING=true
ENABLE_CIDR_MATCHING=true
ENABLE_URL_DOMAIN_EXTRACTION=true

# Performance Settings
MAX_CONCURRENT_CORRELATIONS=10
